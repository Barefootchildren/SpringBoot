<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homework.mapper.EmpMapper">
    <delete id="deleteByCond" parameterType="emp">
        delete from day04emp
        <where>
            <if test="name!=null and name!=''">
                and name=#{name}
            </if>
            <if test="addr!=null and addr!=''">
                and addr=#{addr}
            </if>
            <if test="dept!=null and dept!=''">
                and dept=#{dept}
            </if>
            <if test="age!=null and age!=''">
                and age=#{age}
            </if>
        </where>
    </delete>

    <select id="selectByCond" parameterType="Emp" resultType="Emp">
        select * from day04emp
        <where>
            <if test="name!=null and name!=''">
                and name=#{name}
            </if>
            <if test="addr!=null and addr!=''">
                and addr=#{addr}
            </if>
            <if test="dept!=null and dept!=''">
                and dept=#{dept}
            </if>
            <if test="age!=null and age!=''">
                and age=#{age}
            </if>
        </where>
    </select>
</mapper>